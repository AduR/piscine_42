# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

# Global properties
separator_block_width=15

[time]
command=date '+%H:%M:%S %a %Y-%m-%d'
color=#ffffff
interval=1

[wireless]
label=wlan0
instance=wlan0
command=~/.config/i3blocks/network
interval=10

[ethernet]
label=eth0
instance=eth0
command=~/.config/i3blocks/network
interval=10

[battery]
label=Bat
command=~/.config/i3blocks/battery
interval=30

[musiq]
label=â™ª
command=~/.config/i3blocks/music
color=#ffffff
interval=60
signal=4
# interval=60, update on SIGRTMIN+4
# (apparently we don't get the signal when amarok exits)

[volume]
label=Vol
instance=Master
command=~/.config/i3blocks/volume
signal=1
interval=once
# interval=once, update on SIGRTMIN+1

[xbacklight]
label=Mon
command=~/.config/i3blocks/xbacklight
interval=once
signal=2
# interval=once, update on SIGRTMIN+2

[kbdbacklight]
label=Kbd
command=~/.config/i3blocks/kbdbacklight
interval=once
signal=3
# interval=once, update on SIGRTMIN+3
