# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

# Global properties
separator_block_width=15

[time]
command=date '+%T %a %V %F'
color=#ffffff
interval=1

[wireless]
label=wlan0
instance=wlan0
command=~/.config/i3blocks/network_if_
interval=10

[ethernet]
label=eth0
instance=eth0
command=~/.config/i3blocks/network_if_
interval=10

[public_ip]
label=ip
command=~/.config/i3blocks/network_ip
interval=10

[battery]
label=Bat
command=~/.config/i3blocks/battery
interval=30

[volume]
label=Vol
instance=Master
command=~/.config/i3blocks/volume
signal=1
interval=once
# interval=once, update on SIGRTMIN+1

[xbacklight]
label=Mon
command=~/.config/i3blocks/xbacklight
interval=once
signal=2
# interval=once, update on SIGRTMIN+2

